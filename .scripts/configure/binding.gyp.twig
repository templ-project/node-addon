{
  "targets": [
    {
      "target_name": "main",
      "sources": [
{% for file in srcFiles %}
        "{{file}}"{% if loop.last == false %},{% endif %}

{% endfor %}
      ],
      "link_settings": {},
      "include_dirs": [
{% if api == 'nan' %}
        "<!(node -e \"require('nan')\")"
{% elseif api == 'napi' %}
{% else %}
        "<!@(node -p \"require('node-addon-api').include\")"
{% endif %}
      ],
{% if api == 'node-addon-api' %}
      'defines': ['NAPI_DISABLE_CPP_EXCEPTIONS'],
{% endif %}
      "cflags_cc": [
        "-std={{cppStandards[0]}}"{#  -x c++ #}
      ],
      "cflags_cc!": [
        "-std=gnu++1y"
      ]
    }
  ]
}
